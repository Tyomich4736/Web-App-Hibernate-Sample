<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>UserTable</servlet-name>
    <servlet-class>by.grodno.nosevich.webapp.servlets.UserTableServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserTable</servlet-name>
    <url-pattern>/users</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddDepartment</servlet-name>
    <servlet-class>by.grodno.nosevich.webapp.servlets.AddDepartmentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddDepartment</servlet-name>
    <url-pattern>/depts/add</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SaveDepartment</servlet-name>
    <servlet-class>by.grodno.nosevich.webapp.servlets.SaveDepartmentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SaveDepartment</servlet-name>
    <url-pattern>/depts/save</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteDepartment</servlet-name>
    <servlet-class>by.grodno.nosevich.webapp.servlets.DeleteDepartmentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteDepartment</servlet-name>
    <url-pattern>/depts/delete</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddUser</servlet-name>
    <servlet-class>by.grodno.nosevich.webapp.servlets.AddUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddUser</servlet-name>
    <url-pattern>/users/add</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SaveUser</servlet-name>
    <servlet-class>by.grodno.nosevich.webapp.servlets.SaveUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SaveUser</servlet-name>
    <url-pattern>/users/save</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteUser</servlet-name>
    <servlet-class>by.grodno.nosevich.webapp.servlets.DeleteUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteUser</servlet-name>
    <url-pattern>/users/delete</url-pattern>
  </servlet-mapping>
</web-app>
